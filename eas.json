{
  "cli": {
    "version": ">= 3.13.3",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "ANDROID_PACKAGE": "co.simon.bottletree.dev",
        "GOOGLE_SERVICES_FILE": "google-services.dev.json"
      }
    },
    "simulator": {
      "extends": "development",
      "ios": {
        "simulator": true,
        "resourceClass": "default"
      },
      "env": {
        "ANDROID_PACKAGE": "co.simon.bottletree.dev",
        "GOOGLE_SERVICES_FILE": "google-services.dev.json"
      }
    },
    "apk": {
      "channel": "development"
    },
    "production": {
      "channel": "production",
      "autoIncrement": true,
      "env": {
        "ANDROID_PACKAGE": "co.simon.bottletree",
        "GOOGLE_SERVICES_FILE": "google-services.prod.json"
      }
    },
    "preview": {
      "channel": "production",
      "android": {
        "buildType": "apk",
        "resourceClass": "default"
      },
      "env": {
        "ANDROID_PACKAGE": "co.simon.bottletree",
        "GOOGLE_SERVICES_FILE": "google-services.prod.json"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "internal",
        "releaseStatus": "draft"
      },
      "ios": {
        "appleId": "simoncar@gmail.com",
        "ascAppId": "6449942716",
        "appleTeamId": "Z6FTZSKM3X"
      }
    }
  }
}
